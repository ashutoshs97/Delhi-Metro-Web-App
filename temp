          stationLines.textContent = "Red Line";
          break;
        case "station98":
          stationName.textContent = "Sikandarpur";
          stationLocation.textContent = "Gurugram";
          stationLines.textContent = "Yellow Line";
          break;
        case "station99":
          stationName.textContent = "Sultanpur";
          stationLocation.textContent = "South Delhi";
          stationLines.textContent = "Yellow Line";
          break;
        case "station100":
          stationName.textContent = "Surajmal Stadium";
          stationLocation.textContent = "West Delhi";
          stationLines.textContent = "Green Line";
          break;
        default:
          stationName.textContent = "Invalid Station";
          stationLocation.textContent = "";
          stationLines.textContent = "";
          break;
      }
    }
  </script>
</body>
</html>